mysql> WITH amount_cal AS (
    ->     SELECT
    ->         customer_id,
    ->         txn_date,
    ->         txn_type,
    ->         CASE
    ->             WHEN txn_type = 'deposit' THEN txn_amount
    ->             ELSE txn_amount * -1
    ->         END AS txn_amount
    ->     FROM customer_transactions
    -> )
    -> SELECT
    ->     customer_id,
    ->     txn_date,
    ->     txn_type,
    ->     SUM(txn_amount) OVER (PARTITION BY customer_id ORDER BY txn_date ASC) AS running_customer_balance
    -> FROM amount_cal;
